			</dependency>
			<dependency>
				<groupId>commons-codec</groupId>
				<artifactId>commons-codec</artifactId>
				<version>1.6</version>
			</dependency>
			<dependency>
				<groupId>com.samaxes.stripes</groupId>
				<artifactId>stripes-injection-enricher</artifactId>

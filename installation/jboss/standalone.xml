<!--
    Add System Properties to support GZip compression and URIEncoding.
    To be added after the </extensions> block.
-->
<system-properties>
		<!--App server-->
		<property name="org.apache.catalina.connector.URI_ENCODING" value="UTF-8"/>
        <property name="org.apache.catalina.connector.USE_BODY_ENCODING_FOR_QUERY_STRING" value="true"/>
        <property name="org.apache.coyote.http11.Http11Protocol.COMPRESSION" value="on"/>
        <property name="org.apache.coyote.http11.Http11Protocol.COMPRESSION_MIME_TYPES" value="text/html,text/xml,text/plain,text/css,text/javascript,application/xhtml+xml,application/xml,application/javascript,application/json"/>
		<!--Application state : PRODUCTION, DEVELOPMENT, DEVELOPMENT_WITH_JREBEL -->
		<property name="mobics.config.application.state" value="PRODUCTION"/>
		<!--Patterns (js patterns are used by different components, that is why they differ)-->
        <property name="mobics.config.meter.pattern" value="#"/>
        <property name="mobics.config.kilometer.pattern" value="#,##0.0"/>
        <property name="mobics.config.currency.pattern" value="#,##0.00"/>
		<property name="mobics.config.date.pattern" value="dd/MM/yyyy"/>
        <property name="mobics.config.datetime.pattern" value="dd/MM/yyyy HH:mm"/>
		<property name="mobics.config.time.pattern" value="HH:mm"/>
		<property name="mobics.config.week.pattern" value="E"/>
		<property name="mobics.config.js.date.time.pattern" value="DD/MM/YYYY HH:mm"/>
        <property name="mobics.config.js.date.pattern" value="dd/mm/yy"/>
        <property name="mobics.config.js.time.pattern" value="HH:ii"/>
		<!--Failure authentication string-->
        <property name="mobics.config.authentication.failure.string" value="Failed Authentication"/>
		<!--Endpoints-->
        <property name="mobics.config.endpoint.fleet" value="http://mobics02.critical.pt:8080/mobics-webservices/Fleet"/>
        <property name="mobics.config.endpoint.booking" value="http://mobics02.critical.pt:8080/mobics-webservices/Booking"/>
        <property name="mobics.config.endpoint.miscellaneous" value="http://mobics02.critical.pt:8080/mobics-webservices/Miscellaneous"/>
        <property name="mobics.config.endpoint.carclub" value="http://mobics02.critical.pt:8080/mobics-webservices/CarClub"/>
		<property name="mobics.config.endpoint.car" value="http://mobics02.critical.pt:8080/mobics-webservices/Car"/>
        <property name="mobics.config.endpoint.customer" value="http://mobics02.critical.pt:8080/mobics-webservices/Customer"/>
		<!--Geolocation server-->
        <property name="mobics.config.geolocation.server" value="nominatim.openstreetmap.org"/>
		<property name="mobics.config.geolocation.server.allowed.countries" value="pt"/>
		<!--Styling-->
		<property name="mobics.config.default.theme.style" value="map"/>
		<property name="mobics.config.default.theme.color" value="darkred"/>
		<property name="mobics.config.default.theme.warm.word" value="warm"/>		
		<!--Search result numbers-->
        <property name="mobics.config.max.results" value="99"/>
		<property name="mobics.config.recents.filter.month.gap" value="6"/>
		<property name="mobics.config.radius.any.distance" value="9999999"/>
		<!--Pooling interval -->
		<property name="mobics.config.polling.interval.milliseconds" value="15000"/>
		<property name="mobics.config.state.polling.timeout.milliseconds" value="120000"/>
		<property name="mobics.config.unlock.polling.timeout.milliseconds" value="60000"/>
		<property name="mobics.config.lock.end.polling.timeout.milliseconds" value="60000"/>
		
</system-properties>

<!--
    Disable the default 'welcome' content, which is deployed in the root context by default.
    Set enable-welcome-root="false" to disable the root context in the subsystem "urn:jboss:domain:web:1.0".
-->
<virtual-server name="default-host" enable-welcome-root="false">
    <alias name="localhost"/>
    <alias name="mobics"/>
</virtual-server>
